<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background2"
    tools:context="com.example.cecihome.basicloginandregistersharedpreferences.MainActivity">

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Username"
        android:drawableLeft="@drawable/ic_action_username"
        android:inputType="textPersonName"
        android:background="@null"
        android:textColor="@color/colorWhite"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etName"
        android:layout_below="@+id/etName"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_action_locks"
        android:inputType="textPassword"
        android:background="@null"
        android:textColor="@color/colorWhite"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etName"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="140dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/travel" />

    <android.support.v7.widget.CardView
        android:layout_width="450dp"
        android:layout_height="65dp"
        android:layout_below="@+id/etPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        app:cardBackgroundColor="@color/colorYellow"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/cvRegister">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Login"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Register Here."
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp" />
</RelativeLayout>
